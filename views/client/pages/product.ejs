<%- include('../partials/header.ejs')%>

  <!-- Product -->
  <section class="container py-5">
    <div class="row">
      <!-- Image -->
      <div class="col-md-6">
        <img src="<%= product.image %>" class="img-fluid" alt="Product">
        <div class="mt-3">
          <img src="https://via.placeholder.com/100x100.png?text=Thumb" class="me-2" alt="thumb">
        </div>
      </div>

      <!-- Details -->
      <div class="col-md-6 product-detail">
        <form action="/cart/add/<%= product._id %>" method="post">
          <h2 class="fw-medium">
            <%= product.name %>
          </h2>
          <p class="h5 fw-bolder mt-2">$<%= product.price %>
          </p>
          <p><strong>Color:</strong> Yellow</p>

          <label for="size-s" style="margin-right:10px;">Select Size</label>
          <div class="size-options my-4">
            <input type="radio" id="size-s" name="size" value="S" checked>
            <label class="size-btn" for="size-s">S</label>
            <input type="radio" id="size-m" name="size" value="M">
            <label class="size-btn" for="size-m">M</label>
            <input type="radio" id="size-l" name="size" value="L">
            <label class="size-btn" for="size-l">L</label>
            <input type="radio" id="size-xl" name="size" value="XL">
            <label class="size-btn" for="size-xl">XL</label>
            <input type="radio" id="size-xxl" name="size" value="XXL">
            <label class="size-btn" for="size-xxl">XXL</label>
          </div>


          <div class="d-flex mb-3">
            <a href="/cartIcrement/<%= product._id%>" class="btn btn-outline-secondary">-</a>
            <input type="text" class="form-control w-25 text-center" value="1">
            <a href="/cartDecrement/<%= product._id%>" class="btn btn-outline-secondary">+</a>
          </div>
          <button class="btn add-to-cart w-100 mb-3 rounded-pill py-2" >Add to Cart</button>


          <div class="description border p-3 rounded-4 mb-3">
            <h4>Product Info</h4>
            <p>High-quality funky printed tote bag. Perfect for daily use.</p>
          </div>

          <div class="delivery-info border rounded-4 p-2">
            <h4 class="py-3 ps-2">Shipping</h4>
            <div class="col-12 d-flex flex-wrap">
              <div class="col-6">
                <div class="discount d-flex align-items-center">
                  <i class="fa fa-solid fa-percent rounded-circle"></i>
                  <div class="data ms-3">
                    <h6 class="mb-0 fw-medium text-dark">Discount</h6>
                    <span>Disc </span>
                  </div>

                </div>
              </div>
              <div class="col-6">
                <div class="return-refund d-flex align-items-center">
                  <i class="fa fa-solid fa-asterisk rounded-circle"></i>
                  <div class="data ms-3">
                    <h6 class="mb-0 fw-medium text-dark">Return & Refund Policy</h6>
                    <span></span>
                  </div>
                </div>
              </div>
              <div class="col-6 mt-4 pb-4">
                <div class="delivery d-flex align-items-center">
                  <i class="fa fa-solid fa-calendar rounded-circle"></i>
                  <div class="data ms-3">
                    <h6 class="mb-0 fw-medium text-dark">Delivery Time</h6>
                    <span></span>
                  </div>
                </div>
              </div>
              <div class="col-6 mt-4 pb-4">
                <div class="delivery d-flex align-items-center">
                  <i class="fa fa-solid fa-truck rounded-circle"></i>
                  <div class="data ms-3">
                    <h6 class="mb-0 fw-medium text-dark">Estimation Arrive</h6>
                    <span></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </section>

  <%- include('../partials/footer.ejs')%>