<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container py-5">
    <h2 class="mb-4">ðŸ›’ Your Shopping Cart</h2>

    <% if (cart && cart.items.length > 0) { %>
      <table class="table table-striped align-middle">
        <thead>
          <tr>
            <th>Product</th>
            <th width="120">Price</th>
            <th width="120">Quantity</th>
            <th width="120">Total</th>
            <th width="100">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% let grandTotal = 0; %>
          <% cart.items.forEach(item => { 
               const subtotal = item.product.price * item.quantity;
               grandTotal += subtotal;
          %>
            <tr>
              <td>
                <div class="d-flex align-items-center">
                  <img src="<%= item.product.image %>" alt="<%= item.product.name %>" class="me-3" style="width:60px; height:60px; object-fit:cover;">
                  <span><%= item.product.name %></span>
                </div>
              </td>
              <td>â‚¹<%= item.product.price %></td>
              <td>
                <form action="/cart/update/<%= item.product._id %>" method="POST" class="d-flex">
                  <input type="number" name="quantity" value="<%= item.quantity %>" min="1" class="form-control form-control-sm me-2" style="width:70px;">
                  <button type="submit" class="btn btn-sm btn-primary">Update</button>
                </form>
              </td>
              <td>â‚¹<%= subtotal %></td>
              <td>
                <form action="/cart/remove/<%= item.product._id %>" method="POST">
                  <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                </form>
              </td>
            </tr>
          <% }) %>
          <tr>
            <td colspan="3" class="text-end fw-bold">Grand Total:</td>
            <td colspan="2" class="fw-bold">â‚¹<%= grandTotal %></td>
          </tr>
        </tbody>
      </table>

      <div class="text-end">
        <a href="/checkout" class="btn btn-success btn-lg">Proceed to Checkout</a>
      </div>

    <% } else { %>
      <div class="alert alert-info">
        Your cart is empty. <a href="/product">Continue Shopping</a>
      </div>
    <% } %>
  </div>
</body>
</html>
